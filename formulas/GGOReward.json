{
  "name": "استقرار کامل سیستم قفل و پاداش",
  "description": "قراردادهای GGOToken و LockAndReward را دیپلوی کرده و سپس مالکیت و قابلیت ضرب توکن GGO را به قرارداد LockAndReward منتقل می‌کند.",
  "steps": [
    {
      "step": 1,
      "action": "deploy",
      "contractName": "GGOToken",
      "source": "contracts/GGOToken.sol",
      "args": []
    },
    {
      "step": 2,
      "action": "deploy",
      "contractName": "LockAndReward",
      "source": "contracts/LockAndReward.sol",
      "args": [
        "{{GGOToken.address}}"
      ]
    },
    {
      "step": 3,
      "action": "call_function",
      "contractName": "GGOToken",
      "function": "transferOwnership",
      "args": [
        "{{LockAndReward.address}}"
      ]
    }
  ]
}
